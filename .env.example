# Database connection string. Defaults to a local SQLite DB file.
DATABASE_URL=sqlite:///./qqq_assistant.db

# External integrations
TAOBAO_APP_KEY=your-app-key
TAOBAO_APP_SECRET=your-app-secret
TAOBAO_SESSION_KEY=your-session-key
TAOBAO_API_URL=https://gw.api.taobao.com/router/rest

# Translation provider configuration (Google Cloud or similar)
TRANSLATION_API_KEY=your-translation-api-key
TRANSLATION_PROVIDER=gcloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcloud-service-account.json

# Where generated channel export files will be written
SALES_CHANNEL_EXPORT_DIR=./exports

# Pricing helpers (optional defaults when a product lacks overrides)
# Leave unset to fall back to app.config.Settings baked-in values.
EXCHANGE_RATE=185.2
DEFAULT_MARGIN=15
VAT_RATE=10
DEFAULT_DELIVERY=3500

# Content helpers
# Provide an absolute or public URL that should be appended to exported
# product descriptions (e.g., return/exchange policy image)
RETURN_POLICY_IMAGE_URL=

# Frontend channel support toggles (comma-separated channel labels)
# Example: VITE_SUPPORTED_CHANNEL_LABELS=SmartStore,Coupang
VITE_SUPPORTED_CHANNEL_LABELS=SmartStore
